<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ metadata.description }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&family=Work+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <!--homepage stylesheet -->
    {%if templateClass == "tmpl-home" %}
      <link href="/css/homepage.css" rel="stylesheet" type="text/css">
    {% endif %}
    <!--404 stylesheet -->
    {%if templateClass == "tmpl-404" %}
      <link href="/css/four-oh-four.css" rel="stylesheet" type="text/css">
    {% endif %}
    <!--post stylesheet -->
    {%if tags and tags | checkIfPost %}
      <link href="/css/posts.css" rel="stylesheet" type="text/css">
    {% endif %}
  </head>
  <body>
    <header>
      <div class="brand"><a href="{{ chrisf.rootUrl }}">Chris Ferguson</a></div>
      {% if page.url != "/" %}
        {% include "breadcrumb.njk" %}
      {% endif %}
    </header>

    <main class="{% if templateClass %}{{templateClass}}{% else %}page{% endif %}">
      {{ content | safe }}
    </main>

  </body>
</html>